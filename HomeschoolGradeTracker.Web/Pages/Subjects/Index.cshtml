@page
@model HomeschoolGradeTracker.Web.Pages.Subjects.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Subjects
            </h2>
        </div>
        <div x-data class="col-6 text-end">
            <button class="btn btn-primary"
                    hx-get="/Subjects/CreatePartial"
                    hx-target="#modal-content"
                    hx-swap="innerHTML"
                    @@click="window.dispatchEvent(new CustomEvent('open-modal'))">
                Create Subject
            </button>

        </div>

    </div>

    <partial name="_SubjectTable" for="@Model.Subjects" />

</div>
