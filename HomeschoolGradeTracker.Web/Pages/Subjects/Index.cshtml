@page
@model HomeschoolGradeTracker.Web.Pages.Subjects.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Subjects
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">Create New Subject</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Subject Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model.Subjects)
            {
                <tr>
                    <td>@subject.Name</td>
                    <td>@subject.Description</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit/" asp-route-id="@subject.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-page="Delete/" asp-route-id="@subject.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
