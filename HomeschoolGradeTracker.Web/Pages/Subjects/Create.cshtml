@page
@model HomeschoolGradeTracker.Web.Pages.Subjects.CreateModel
@{
    ViewData["Title"] = "Create Subject";
}

<h2>Create a New Subject</h2>

<form method="post">
    <div>
        <label asp-for="Subject.Name"></label>
        <input asp-for="Subject.Name" />
        <span class="text-danger" asp-validation-for="Subject.Name"></span>
    </div>

    <div>
        <label asp-for="Subject.Description"></label>
        <input asp-for="Subject.Description" />
        <span class="text-danger" asp-validation-for="Subject.Description"></span>
    </div>

    <div class="mt-2">
        <button class="btn btn-primary" type="submit">Create</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
