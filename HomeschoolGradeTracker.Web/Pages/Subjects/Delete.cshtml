@page "{id:int}"
@model HomeschoolGradeTracker.Web.Pages.Subjects.DeleteModel

<form method="post">
    <input type="hidden" asp-for="Subject.Id" />

    <div class="row pb-2">
        <h2>Delete Subject</h2>
        <p>Are you sure you want to delete the subject "<strong>@Model.Subject.Name</strong>"?</p>
        <hr />
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-danger form-control">Yes, Delete</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="Index" class="btn btn-secondary border form-control">Cancel</a>
        </div>
    </div>
 </form>