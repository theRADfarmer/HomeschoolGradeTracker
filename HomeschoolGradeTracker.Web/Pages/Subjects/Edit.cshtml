@page "{id:int}"
@model HomeschoolGradeTracker.Web.Pages.Subjects.EditModel

<h2>Edit Subject</h2>

<form method="post">
    <input type="hidden" asp-for="Subject.Id" />
    <div>
        <label asp-for="Subject.Name">Name </label>
        <input asp-for="Subject.Name" />
        <span class="text-danger" asp-validation-for="Subject.Name"></span>
    </div>

    <div class="mt-2">
        <button class="btn btn-primary" type="submit">Save Changes</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
