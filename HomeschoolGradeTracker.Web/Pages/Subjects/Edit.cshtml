@page "{id:int}"
@model HomeschoolGradeTracker.Web.Pages.Subjects.EditModel

<form method="post">
    <input type="hidden" asp-for="Subject.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Edit Subject</h2>
            <hr />
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Subject.Name">Name </label>
            <input asp-for="Subject.Name" class="form-control" />
            <span asp-validation-for="Subject.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Subject.Description">Description </label>
            <textarea asp-for="Subject.Description" class="form-control"></textarea>
            <span asp-validation-for="Subject.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-6 col-md-3">
            <button type="submit" class="btn btn-primary form-control">Save Changes</button>
        </div>
        <div class="col-6 col-md-3">
            <a asp-page="Index" class="btn btn-secondary border form-control">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
