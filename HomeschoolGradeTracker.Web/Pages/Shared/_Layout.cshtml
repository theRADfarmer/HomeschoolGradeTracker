<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homeschool Grade Tracker</title>

    @Html.AntiForgeryToken()

    <!-- CSS Styles -->
    <!-- Bootstrap.css - Comment out or remove if using custom styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HomeschoolGradeTracker.Web.styles.css" asp-append-version="true" />
    <script type="importmap"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Homeschool Grade Tracker</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/subjects/index">Subjects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

            <!-- Static Modal Shell -->
            <div id="modal"
                 x-data="{ open: false }"
                 x-show="open"
                 @@open-modal.window="open = true"
                 @@close-modal.window="open = false"
                 x-transition.opacity
                 x-cloak
                 class="bg-transparent position-fixed top-0 start-0 w-100 h-100"
                 style="display: none; background-color: rgba(0,0,0,0.5); z-index: 1050;"
                 @@click.self="open = false; $dispatch('close-modal')">

                <div class="modal-dialog modal-dialog-centered bg-white border border-black rounded shadow w-sm-100 w-md-75 w-lg-50 modal-margin modal-animation"
                     style="z-index: 1051;"
                     role="document">
                    <div class="modal-content">
                        <div class="modal-body m-2" id="modal-content">
                            <!-- Dynamic content loaded here via htmx -->
                        </div>
                    </div>
                </div>
            </div>


        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Homeschool Grade Tracker - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap.js -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- HTMX -->
    <script src="~/lib/htmx.org/dist/htmx.js"></script>
    <!-- Alpine.js -->
    <script defer src="~/lib/alpinejs/dist/cdn.js" asp-append-version="true"></script>
    <!-- Custom js -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
